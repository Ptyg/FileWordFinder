{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 25,
      "patch": 1
    },
    "configurePresets": [
      {
        "name": "base",
        "description": "Sets generator, build and install directory, vcpkg",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/${presetName}"
      },
      {
        "name": "windows-base",
        "description": "Windows settings for MSBuild toolchain that apply to msvc",
        "hidden": true,
        "inherits": "base",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "toolset": {
          "value": "host=x64",
          "strategy": "external"
        }
      },
      {
        "name": "windows-ninja-clang-release",
        "displayName": "ninja | clang | release",
        "description": "Windows with the clang compiler, release build type",
        "inherits": "windows-base",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "clang",
          "CMAKE_CXX_COMPILER": "clang++",
          "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "windows-vs_gen-msvc-release",
        "displayName": "vs_gen | msvc | release",
        "description": "Windows with the msvc compiler, release build type",
        "inherits": "windows-base",
        "generator": "Visual Studio 17 2022",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl",
          "CMAKE_CXX_COMPILER": "cl",
          "CMAKE_BUILD_TYPE": "Release"
        }
      }
    ]
  }